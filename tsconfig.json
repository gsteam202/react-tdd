{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "module": "ES2020",
    "target": "es5",
    "allowJs": true,
    "esModuleInterop": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",
    "types": ["node", "@types/jest"],
    "typeRoots": ["./src/@types"]
  },
  "include": ["./src/**/*", "src/@types/*.d.ts"],
  "files": ["src/index.ts"]
}
